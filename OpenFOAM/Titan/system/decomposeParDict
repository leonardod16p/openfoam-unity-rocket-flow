FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 6; // Usaremos 6 núcleos

method          simple; // Método simples e robusto

coeffs
{
    n           (3 2 1);  // Fatiamento (3*2*1 = 6 subdomínios)
    delta       0.001;
}

